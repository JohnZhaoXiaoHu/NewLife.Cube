@using NewLife.Common;
@{ var title = ViewBag.Title + "";
    if (title != "" && !title.Contains(" - "))
    {
        title += " - " + NewLife.Common.SysConfig.Current.DisplayName;
    }

    var set = NewLife.Cube.Setting.Current;
    var res = set.ResourceUrl;
    if (String.IsNullOrEmpty(res)) res = "/Content";
    res = res.TrimEnd('/'); 
 }
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>@title</title>
    <link rel="stylesheet" href="@res/PearAdminLayui/component/pear/css/pear.css" />
    <link href="@res/PearAdminLayui/component/pear/module/sweetalert/sweetalert2.css" rel="stylesheet" />
    @RenderSection("css", false)
    <script src="@res/PearAdminLayui/component/layui/layui.js"></script>
    <script src="@res/PearAdminLayui/component/pear/pear.js"></script>
    @RenderSection("javascript", false)
</head>
<body class="pear-container">
    @RenderBody()
</body>
</html>