@page "/{area}/{modelName}"
@using NewLife.CubeUI.Models
@using NewLife.CubeUI.Services
@using System.ComponentModel
@using AntDesign.TableModels

<h3>List @Area  @ModelName</h3>

<div>
    <PageContainer Title="Table List">
        <ChildContent>
            <div class="standardList">

                <Card Class="listCard"
                      Title="基本列表"
                      Style="margin-top: 24px;"
                      BodyStyle="padding: 0 32px 40px 32px">
                    <Extra>
                        <Button Type="primary">
                            新建
                        </Button>
                    </Extra>
                    <ChildContent>
                        <Table TItem="Data" DataSource="@data" OnRowClick="@OnRowClick">
                            <AntDesign.Column Field="@context.Tags" ></AntDesign.Column>
                            <ActionColumn Title="Acton">
                                <Space Size="middle">
                                    <SpaceItem>
                                        <a>Invite @context.Name</a>
                                    </SpaceItem>
                                    <SpaceItem>
                                        <a>Delete</a>
                                    </SpaceItem>
                                </Space>
                            </ActionColumn>
                        </Table>
                    </ChildContent>
                </Card>
            </div>
        </ChildContent>
    </PageContainer>
</div>

@code
{ 
    [Parameter]
    public string Area { get; set; }

    [Parameter]
    public string ModelName { get; set; }

    Data[] data = new Data[]
    {
        new Data
        {
            Key = "1",
            Name = "John Brown",
            Age = 32,
            Address = "New York No. 1 Lake Park",
            Tags = new[] {"nice", "developer"}
        },
        new Data()
        {
            Key = "2",
            Name = "Jim Green",
            Age = 42,
            Address = "London No. 1 Lake Park",
            Tags = new[] { "loser"}
        },
        new Data
        {
            Key = "3",
            Name = "Joe Black",
            Age = 32,
            Address = "Sidney No. 1 Lake Park",
            Tags = new[] { "cool", "teacher" }
        }
    };

    public class Data
    {
        [DisplayName("Key")]
        public string Key { get; set; }

        [DisplayName("Name")]
        public string Name { get; set; }

        [DisplayName("Age")]
        public int Age { get; set; }

        [DisplayName("Address")]
        public string Address { get; set; }

        [DisplayName("Tags")]
        public string[] Tags { get; set; }
    }

    void OnRowClick(RowData<Data> row)
    {
        Console.WriteLine($"row {row.Data.Key} was clicked");
    }

    [Inject] protected IProjectService ProjectService { get; set; }


    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        @*_data = await ProjectService.GetFakeListAsync(5);*@
    }

    private RenderFragment Info(string title, string value, bool bordered = false)
    {
        return @<div class="headerInfo">
                   <span>@title</span>
                   <p>@value</p>
                   @if (bordered)
                   {
                       <em/>
                   }
               </div>;
    }
}
